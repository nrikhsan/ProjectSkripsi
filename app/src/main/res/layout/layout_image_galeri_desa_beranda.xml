<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="339dp"
    android:layout_height="200dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:background="@drawable/kerja_bakti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:scaleType="fitXY"
            android:background="@color/black_transparent_50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLihatGaleriDesa"
                android:text="@string/lihat_galeri_desa_lainnya"
                android:textAllCaps="false"
                app:backgroundTint="@color/green_transparent"
                android:layout_gravity="center"
                app:strokeColor="@color/grey"
                app:strokeWidth="1dp"
                app:cornerRadius="10dp"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_regular"
                android:textSize="13sp"
                android:layout_width="185dp"
                android:layout_height="wrap_content"/>

        </FrameLayout>

</androidx.cardview.widget.CardView>