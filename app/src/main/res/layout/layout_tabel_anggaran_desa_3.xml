<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="10dp">

    <GridLayout
        android:id="@+id/grid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:columnCount="3"
        android:rowCount="1">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text_tabel_anggaran_desa"
            android:fontFamily="@font/roboto_medium"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="@string/kode_rek"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text_tabel_anggaran_desa"
            android:fontFamily="@font/roboto_medium"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="@string/uraian"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text_tabel_anggaran_desa"
            android:fontFamily="@font/roboto_medium"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="@string/anggaran"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13sp" />

    </GridLayout>

    <RelativeLayout
        android:id="@+id/relativ1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid1"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="80dp"
            android:layout_height="220dp"
            android:background="@drawable/bg_text_tabel_anggaran_desa"
            android:orientation="vertical"
            android:paddingVertical="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/_6"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/_6_1"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/_6_1_1"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/_6_2"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/_6_2_1"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="145dp"
            android:layout_height="180dp"
            android:layout_toEndOf="@id/layout1"
            android:background="@drawable/bg_text_tabel_anggaran_desa"
            android:orientation="vertical"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/pembiayaan"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="2"
                android:text="@string/penerimaan_pembiayaan"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/silpa_tahun_sebelumnya"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/pengeluaran_pembiayaan"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/pembentukan_dana_cadangan"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="110dp"
            android:layout_height="180dp"
            android:layout_toEndOf="@id/layout2"
            android:background="@drawable/bg_text_tabel_anggaran_desa"
            android:orientation="vertical"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/_5_573_098_82"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/_5_573_098_82"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/_5_000_000_00"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/_5_000_000_00"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="255dp"
            android:layout_height="40dp"
            android:layout_below="@id/layout2"
            android:layout_toEndOf="@id/layout1"
            android:background="@drawable/bg_text_tabel_anggaran_desa"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/pembiayaan_netto"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/_573_098_82_"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="335dp"
            android:layout_height="40dp"
            android:layout_below="@id/layout4"
            android:background="@drawable/bg_text_tabel_anggaran_desa"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/sisa_lebih_pembiayaan_anggaran"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/_0_00"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </LinearLayout>

    </RelativeLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPDFAnggaranDesa"
        android:backgroundTint="@color/white"
        app:cornerRadius="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/lihat_full_pdf"
        android:textColor="@color/green"
        android:textAllCaps="false"
        android:textSize="13sp"
        android:fontFamily="@font/roboto_medium"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/relativ1"
        app:strokeColor="@color/green"
        app:strokeWidth="1dp"
        android:layout_width="150dp"
        android:layout_height="55dp"/>

</RelativeLayout>