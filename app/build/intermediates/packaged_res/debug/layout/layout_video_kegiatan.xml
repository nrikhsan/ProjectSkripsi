<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="25dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/video1"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:cardCornerRadius="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ss1" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_transparent_30" />


            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/youtube" />

        </FrameLayout>


    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/verifikasi_odf_desa_cibentang_kecamatan_kramatmulya"
        android:textColor="@color/black"
        android:textSize="15sp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/video2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ss2" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_transparent_30" />


            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/youtube" />

        </FrameLayout>


    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:maxLines="2"
        android:text="@string/desa_cibentang_juara_2_tingkat_provinsi_jawabarat_lomba_budikdumber_desa_cibentang_perwakilan_tp_pkk_kab_kuningan"
        android:textColor="@color/black"
        android:textSize="15sp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/video3"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ss3" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_transparent_30" />


            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/youtube" />

        </FrameLayout>


    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:maxLines="2"
        android:text="@string/budik_dumber_desa_cibentang_kec_kramatmulya_kab_kuningan"
        android:textColor="@color/black"
        android:textSize="15sp" />

</LinearLayout>