<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ui.fragment.danadesa.FragmentDanaDesa">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAnggaranDesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/dana_anggaran_desa_cibentang"
            android:textAppearance="@style/custom_text_toolbar"
            android:textColor="@color/white" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarAnggaranDesa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/anggaran_pendapatan_dan_belanja_desa_pemerintah_desa_cibentang_tahun_anggaran_2023"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <include layout="@layout/layout_tabel_anggaran_desa_1" />

            <include layout="@layout/layout_tabel_anggaran_desa_2" />

            <include
                android:id="@+id/layout_tabel_anggaran_desa_3"
                layout="@layout/layout_tabel_anggaran_desa_3" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>