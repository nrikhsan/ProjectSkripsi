<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:contentPadding="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardBackgroundColor="@color/card_backgound_color"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/imageBeritaBimbingan"
            android:layout_centerVertical="true"
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:background="@drawable/berita_bimbingan_teknis"
                android:layout_width="80dp"
                android:layout_height="90dp"/>

        </androidx.cardview.widget.CardView>
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/imageBeritaBimbingan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/bimbingan_teknis_pelatihan_website_desa"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:textSize="15sp"
                android:maxLines="2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="@string/lorem_ipsum_is_simply_dummy_text_of_the_printing_and_typesetting_industry_lorem_ipsum_has_been_the_industry_s_standard_dummy_text_ever_since_the_1500s_when_an_unknown_printer_took_a_galley_of_type_and_scrambled_it_to_make_a_type_specimen_book"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:textSize="13sp"
                android:maxLines="1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="5dp"
                android:text="@string/jum_at_26_mei_2023"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/grey"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBacSekarang"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="10sp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="10sp"
            android:text="@string/baca_sekarang"
            android:layout_height="40dp"
            tools:ignore="SmallSp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>